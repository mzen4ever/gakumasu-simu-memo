{
  "manifest_version": 3,
  "name": "Score Exporter",
  "version": "1.2",
  "description": "Extract simulator results and send to Google Sheets",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": [
    "https://script.google.com/*"
  ],
  "action": {
    "default_title": "スコア送信",
    "default_popup": "popup.html"
  },
  "options_page": "options.html"
}
